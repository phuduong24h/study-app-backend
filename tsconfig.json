{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    // Main
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "*": ["*", "node_modules/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
